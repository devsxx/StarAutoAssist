<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".Activity.RegisterActivity">

    <ScrollView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="10dp"
            android:text="REGISTRATION"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:textColor="#808080"
            android:textStyle="bold"
            android:textAlignment="center"
            android:id="@+id/tv_regiter_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="30dp"
            android:id="@+id/name_layout"
            android:weightSum="2"
            android:layout_below="@+id/tv_regiter_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_weight="1"
                android:id="@+id/reg_et_firstname"
                android:layout_width="130dp"
                android:background="@drawable/border_edittext"
                android:layout_height="50dp"
                android:ems="10"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:hint="First Name"
                android:paddingLeft="10dp"
                android:inputType="textPersonName" />

            <EditText
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/border_edittext"
                android:id="@+id/reg_et_lastname"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Last Name"
                android:inputType="textPersonName" />


        </LinearLayout>
        <RelativeLayout
            android:id="@+id/user_relative_layout"
            android:layout_below="@+id/name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
            android:background="@drawable/border_edittext"
            android:id="@+id/reg_et_email"
            android:layout_marginRight="15dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress" />


        <EditText
            android:paddingLeft="10dp"
            android:layout_below="@+id/reg_et_email"
            android:id="@+id/reg_et_password"
            android:background="@drawable/border_edittext"
            android:layout_width="match_parent"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword" />

        <EditText
            android:layout_marginRight="15dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/border_edittext"
            android:layout_below="@+id/reg_et_password"
            android:id="@+id/reg_et_confirmpassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword" />

        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/reg_btn_register"
            android:text="Register"
            android:paddingLeft="10dp"
            android:layout_below="@+id/reg_et_confirmpassword"
            android:background="@drawable/round_button"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/or_layout"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/user_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="--or--"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:weightSum="2"
            android:layout_below="@+id/or_layout"
            android:id="@+id/google_facebook_layout"
            android:layout_width="match_parent"
            android:visibility="visible"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <Button
                android:layout_weight="1"
                android:id="@+id/btn_google"
                android:text="Google"
                android:layout_marginRight="10dp"
                android:textColor="#ffffff"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:background="@drawable/google_button"
                android:layout_width="130dp"
                android:layout_height="wrap_content" />


            <Button
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:id="@+id/btn_facebook"
                android:textStyle="bold"
                android:layout_marginRight="15dp"
                android:textColor="#ffffff"
                android:background="@drawable/facebook_button"
                android:text="Facebook"
                android:layout_alignParentRight="true"
                android:layout_width="130dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

    </ScrollView>

</RelativeLayout>