<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_height="match_parent"
    tools:context=".Home.TyreActivity">

    <LinearLayout
        android:gravity="center"
        android:id="@+id/image_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/logo"
            android:layout_width="150dp"
            android:layout_height="150dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/image_layout"
        android:id="@+id/fare_layout"
        android:orientation="horizontal"
        android:weightSum="3"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Basic Fare"
            android:layout_weight="1"
            android:padding="10dp"
            android:textAlignment="center"
            android:background="@drawable/border_empty_edittext"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/tyre_tv_fare"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/border_edittext"
            android:padding="10dp" />
        <TextView
            android:padding="10dp"
            android:text="/ Km"
            android:layout_weight="1"
            android:background="@drawable/border_empty_edittext"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/fare_layout"
        android:orientation="horizontal"
        android:weightSum="3"
        android:gravity="center"
        android:id="@+id/service_layout"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Service Charge"
            android:layout_weight="2"
            android:padding="10dp"
            android:textAlignment="center"
            android:background="@drawable/border_empty_edittext"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <TextView
            android:layout_marginRight="120dp"
            android:id="@+id/tyre_tv_charge"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/border_edittext"
            android:padding="10dp" />

    </LinearLayout>

    <Button
        android:layout_marginTop="50dp"
        android:layout_below="@+id/service_layout"
        android:layout_width="match_parent"
        android:text="Send Request"
        android:textSize="18sp"
        android:id="@+id/tyre_btn_send"
        android:textColor="#FFFFFF"
        android:background="@drawable/round_button"
        android:layout_height="50dp" />

</RelativeLayout>