<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    xmlns:app="http://schemas.android.com/apk/res-auto"
>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="#20000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/profileimage">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/civ_profile"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:src="@drawable/roundlogo512"
                    android:scaleType="centerCrop"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="2dp"
                    app:civ_shadow="true"
                    app:civ_shadow_color="@color/white"
                    app:civ_shadow_radius="10" />

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_below="@+id/profileimage"
                android:id="@+id/loginfieldlayout"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/email_layout"
                    android:layout_marginTop="15dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:background="@drawable/border_edittext"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:paddingStart="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="5dp"
                        android:hint="First Name"
                        app:met_floatingLabel="highlight"
                        app:met_primaryColor="@color/white"
                        app:met_textColorHint="@color/white"
                        android:id="@+id/et_profile_firstname"
                        android:inputType="text"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:background="@drawable/border_edittext"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:hint="Last Name"
                        app:met_floatingLabel="highlight"
                        app:met_primaryColor="@color/white"
                        app:met_textColorHint="@color/white"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="5dp"
                        android:id="@+id/et_profile_lastname"
                        android:inputType="text"
                        android:layout_width="130dp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:id="@+id/profile_layout"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:background="@drawable/border_edittext"
                        android:id="@+id/et_profile_email"
                        android:paddingLeft="5dp"
                        android:hint="Email"
                        app:met_floatingLabel="highlight"
                        app:met_primaryColor="@color/white"
                        app:met_textColorHint="@color/white"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:inputType="textEmailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="2">
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_marginTop="15dp"
                        android:background="@drawable/border_edittext"
                        android:id="@+id/tv_profile_phone"
                        android:inputType="phone"
                        android:layout_weight="0.5"
                        android:paddingLeft="5dp"
                        android:layout_marginBottom="5dp"
                        app:met_floatingLabel="highlight"
                        android:layout_marginLeft="10dp"
                        app:met_primaryColor="@color/white"
                        app:met_textColorHint="@color/white"
                        android:hint="Phone"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:layout_marginTop="15dp"
                        android:id="@+id/verify"
                        android:layout_weight="1.5"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:hint="Verify"
                        android:textColorHint="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
</LinearLayout>

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:layout_marginTop="15dp"
                        android:background="@drawable/border_edittext"
                        android:id="@+id/et_profile_address"
                        android:inputType="textMultiLine"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="10dp"
                        android:hint="Address"
                        app:met_floatingLabel="highlight"
                        app:met_primaryColor="@color/white"
                        app:met_textColorHint="@color/white"
                        android:paddingBottom="40dp"
                        android:maxLines="3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/loginbtn_lay"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/loginfieldlayout">
                <Button
                    android:id="@+id/btn_profile_save"
                    android:textSize="16sp"
                    android:text="SAVE"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/round_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>