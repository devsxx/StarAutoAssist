<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp">
    <ScrollView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/profileimage">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:src="@drawable/logo"
                    android:id="@+id/civ_profile"
                    app:civ_border_color="@color/colorPrimaryDark"
                    app:civ_border_width="2dp"
                    app:civ_shadow="true"
                    app:civ_shadow_radius="10"
                    app:civ_shadow_color="@color/colorAccent"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_below="@+id/profileimage"
                android:id="@+id/loginfieldlayout"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/email_layout"
                    android:layout_marginTop="15dp"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:background="@drawable/border_edittext"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:hint="First Name"
                        android:id="@+id/et_profile_firstname"
                        android:inputType="text"
                        android:layout_width="130dp"
                        android:layout_height="40dp" />

                    <EditText
                        android:background="@drawable/border_edittext"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:hint="Last Name"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="5dp"
                        android:id="@+id/et_profile_lastname"
                        android:inputType="text"
                        android:layout_width="130dp"
                        android:layout_height="40dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/profile_layout"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:background="@drawable/border_edittext"
                        android:id="@+id/et_profile_email"
                        android:paddingLeft="5dp"
                        android:hint="Email"
                        android:layout_marginTop="15dp"
                        android:inputType="textEmailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />

                    <TextView
                        android:layout_marginTop="15dp"
                        android:background="@drawable/border_edittext"
                        android:id="@+id/tv_profile_phone"
                        android:inputType="phone"
                        android:paddingLeft="5dp"
                        android:hint="Phone"
                        android:padding="5dp"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />

                    <EditText
                        android:layout_marginTop="15dp"
                        android:background="@drawable/border_edittext"
                        android:id="@+id/et_profile_address"
                        android:inputType="textMultiLine"
                        android:paddingLeft="5dp"
                        android:hint="Address"
                        android:paddingBottom="40dp"
                        android:maxLines="3"
                        android:layout_width="match_parent"
                        android:layout_height="80dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/loginbtn_lay"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/loginfieldlayout">
                <Button
                    android:id="@+id/btn_profile_save"
                    android:textSize="16sp"
                    android:text="SAVE"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:background="@drawable/round_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>